# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# Database Configuration
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_PASSWORD@postgres-prod:5432/shiftwise_prod
POSTGRES_DB=shiftwise_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis-prod:6379
REDIS_PORT=6379

# Authentication
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY
JWT_EXPIRES_IN=8h

# OIDC Configuration
OIDC_ISSUER_URL=https://auth.company.com
OIDC_CLIENT_ID=shiftwise-production
OIDC_CLIENT_SECRET=CHANGE_THIS_CLIENT_SECRET

# CORS Configuration
CORS_ORIGIN=https://shiftwise.company.com

# Frontend Configuration
VITE_API_URL=https://api.shiftwise.company.com

# Performance
MAX_CONCURRENT_PLANS=10
PLAN_GENERATION_TIMEOUT=30000
CACHE_TTL=3600

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SIMULATION=true
ENABLE_AUDIT_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=/app/logs/shiftwise.log

# Production Security
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# Disable development features
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_ROUTES=false
ENABLE_MOCK_DATA=false
ENABLE_SWAGGER=false