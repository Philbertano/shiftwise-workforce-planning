# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://staging_user:staging_password@postgres-staging:5432/shiftwise_staging
POSTGRES_DB=shiftwise_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis-staging:6379
REDIS_PORT=6379

# Authentication
JWT_SECRET=staging-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h

# OIDC Configuration (staging provider)
OIDC_ISSUER_URL=https://staging-auth.company.com
OIDC_CLIENT_ID=shiftwise-staging
OIDC_CLIENT_SECRET=staging-client-secret

# CORS Configuration
CORS_ORIGIN=https://staging.shiftwise.company.com

# Frontend Configuration
VITE_API_URL=https://staging-api.shiftwise.company.com

# Performance
MAX_CONCURRENT_PLANS=8
PLAN_GENERATION_TIMEOUT=30000
CACHE_TTL=1800

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
ENABLE_HELMET=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SIMULATION=true
ENABLE_AUDIT_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Testing Features
ENABLE_TEST_ROUTES=true
ENABLE_MOCK_DATA=false